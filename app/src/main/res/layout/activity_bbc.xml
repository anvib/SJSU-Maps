<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bbc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anvita.lab2.BBC">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bbc"
        android:layout_marginTop="11dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/buildingName"
        android:layout_alignLeft="@+id/buildingName"
        android:layout_alignStart="@+id/buildingName" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/location"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/Address" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/hg"
        android:layout_marginTop="24dp"
        android:id="@+id/iv_distance"
        android:layout_below="@+id/buildingAddress"
        android:layout_alignLeft="@+id/Address"
        android:layout_alignStart="@+id/Address" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_distance"
        android:layout_toRightOf="@+id/iv_distance"
        android:layout_toEndOf="@+id/iv_distance"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/tv_time" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:id="@+id/tv_distance"
        android:layout_alignTop="@+id/tv_time"
        android:layout_alignRight="@+id/buildingAddress"
        android:layout_alignEnd="@+id/buildingAddress" />

    <Button
        android:text="Street View"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/button2"
        android:onClick="streetViewPress"/>

    <TextView
        android:text="Boccardo Business Complex, San Jose, CA 95112"
        android:textSize="22sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildingAddress"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/Address"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
