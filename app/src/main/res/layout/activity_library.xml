<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anvita.lab2.Library">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/library"
        android:id="@+id/imageView"
        android:layout_marginBottom="131dp"
        android:layout_above="@+id/Address"
        android:layout_alignRight="@+id/buildingAddress"
        android:layout_alignEnd="@+id/buildingAddress" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/location"
        android:id="@+id/Address"
        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/buildingAddress"
        android:layout_toStartOf="@+id/buildingAddress"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp" />

    <TextView
        android:text="Dr. Martin Luther King, Jr. Library, 150 East San Fernando Street, San Jose, CA 95112"
        android:textSize="22sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildingAddress"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignTop="@+id/Address"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:text="Street View"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/button2"
        android:onClick="streetViewPress"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_distance"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/iv_distance"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/tv_time"
        android:layout_alignTop="@+id/iv_distance"
        android:layout_alignLeft="@+id/buildingAddress"
        android:layout_alignStart="@+id/buildingAddress" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/hg"
        android:id="@+id/iv_distance"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/Address"
        android:layout_alignStart="@+id/Address" />

</RelativeLayout>
