<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/campusmap"
    tools:context="com.example.anvita.lab2.MainActivity">

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/BBCH"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SUH"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/EngineeringH"
        android:layout_marginTop="146dp"
        android:layout_height="95dp"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_width="70dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/BBCH"
        android:layout_toStartOf="@+id/BBCH" />

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/SUH"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/EngineeringH"
        android:layout_alignRight="@+id/EngineeringH"
        android:layout_alignEnd="@+id/EngineeringH" />

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/SPGH"
        android:layout_marginBottom="34dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/SUH"
        android:layout_width="90dp" />

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/LibraryH"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/EngineeringH"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.anvita.lab2.CustomDrawableView
        android:id="@+id/YUH"
        android:layout_width="45dp"
        android:layout_height="65dp"
        android:layout_below="@+id/BBCH"
        android:layout_alignLeft="@+id/LibraryH"
        android:layout_alignStart="@+id/LibraryH" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/userlocation"
        android:layout_below="@+id/YUH"
        android:layout_alignRight="@+id/BBCH"
        android:layout_alignEnd="@+id/BBCH"
        android:layout_marginTop="19dp"
        android:id="@+id/myLocation"
        android:onClick="findMyLocation"
        android:layout_alignLeft="@+id/BBCH"
        android:layout_alignStart="@+id/BBCH" />

    <com.example.anvita.lab2.CustomDrawableUser
        android:id="@+id/user"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toLeftOf="@+id/EngineeringH"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

</RelativeLayout>
